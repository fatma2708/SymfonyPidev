{% extends 'base.html.twig' %}

{% block title %}Edit Tournoi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    {{ parent() }}
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"/>
    <!-- Custom CSS -->
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }
        
        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }
        
        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }
        
        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
      
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Edit Tournoi</h2>
        </header>
        <div class="panel-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal form-bordered'}}) }}

            {# Your existing form fields here #}
            {{ form_row(form.nom) }}
            {{ form_row(form.sport) }}
            {{ form_row(form.dateDebut) }}
            {{ form_row(form.dateFin) }}

            {# Adresse Field with Search Button #}
            <div class="form-group">
                <label class="col-md-3 control-label">{{ form_label(form.adresse) }}</label>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-map-marker-alt"></i></span>
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Enter address or search on map'}}) }}
                        <span class="input-group-btn">
                            <button type="button" id="search-button" class="btn btn-default">Search</button>
                        </span>
                    </div>
                    {{ form_errors(form.adresse) }}
                </div>
            </div>

            {# Map Section #}
            <div class="form-group">
                <div class="col-md-9 col-md-offset-3">
                    <div id="map" style="height: 400px; margin-bottom: 20px;"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 col-md-offset-3">
                    <button class="btn btn-warning">
                        <i class="fas fa-edit"></i> Update
                    </button>
                    <a href="{{ path('app_tournois_index') }}" class="btn btn-default">
                        <i class="fas fa-arrow-left"></i> Back to list
                    </a>
                </div>
            </div>

            {{ form_end(form) }}

            <hr>

           
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var map = L.map('map').setView([48.8566, 2.3522], 13); // Default to Paris, update dynamically
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: 'Â© OpenStreetMap contributors'
            }).addTo(map);

            var marker;
            var adresseInput = document.getElementById('{{ form.adresse.vars.id }}');

            // If an existing address is present, attempt to place the marker
            if (adresseInput.value.trim() !== '') {
                fetch('https://nominatim.openstreetmap.org/search?format=json&q=' + encodeURIComponent(adresseInput.value))
                    .then(response => response.json())
                    .then(data => {
                        if (data.length > 0) {
                            var lat = parseFloat(data[0].lat);
                            var lon = parseFloat(data[0].lon);
                            map.setView([lat, lon], 13);
                            marker = L.marker([lat, lon]).addTo(map);
                        }
                    });
            }

            function updateMap(lat, lng, displayName) {
                map.setView([lat, lng], 13);
                if (marker) {
                    map.removeLayer(marker);
                }
                marker = L.marker([lat, lng]).addTo(map);
                adresseInput.value = displayName ? displayName : lat.toFixed(6) + ',' + lng.toFixed(6);
            }

            map.on('click', function(e) {
                var lat = e.latlng.lat.toFixed(6);
                var lng = e.latlng.lng.toFixed(6);

                fetch('https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=' + lat + '&lon=' + lng)
                    .then(response => response.json())
                    .then(data => {
                        if (data.display_name) {
                            updateMap(lat, lng, data.display_name);
                        } else {
                            updateMap(lat, lng);
                        }
                    })
                    .catch(error => {
                        console.error('Reverse geocoding error:', error);
                        updateMap(lat, lng);
                    });
            });

            document.getElementById('search-button').addEventListener('click', function() {
                var query = adresseInput.value;
                if(query.trim() === ''){
                    alert('Please enter a location to search.');
                    return;
                }
                fetch('https://nominatim.openstreetmap.org/search?format=json&q=' + encodeURIComponent(query))
                    .then(response => response.json())
                    .then(data => {
                        if(data.length > 0) {
                            var result = data[0];
                            var lat = parseFloat(result.lat);
                            var lon = parseFloat(result.lon);
                            updateMap(lat, lon, result.display_name);
                        } else {
                            alert('No results found for "' + query + '".');
                        }
                    })
                    .catch(error => {
                        console.error('Geocoding error:', error);
                        alert('Error fetching location data.');
                    });
            });
        });
    </script>
{% endblock %}
