{% extends 'base.html.twig' %}

{% block title %}Statistiques des Blessures{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <style>
        .chart-container {
            max-width: 800px;
            margin: auto;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar bg-white">
        <div class="sidebar-header p-4">
            <h3 class="fw-bold text-primary">Medical Manager</h3>
        </div>
        <div class="sidebar-menu p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="{{ path('app_dossier_medical_index') }}" class="nav-link">
                        <i class="fas fa-notes-medical me-3"></i> Dossiers Médicaux
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_blessure_index') }}" class="nav-link">
                        <i class="fas fa-user-injured me-3"></i> Gestion des Blessures
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_statistiques') }}" class="nav-link active bg-light rounded">
                        <i class="fas fa-chart-bar me-3"></i> Statistiques
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fa-xl"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="fw-bold">
                        <i class="fas fa-chart-line me-2"></i>Évolution des Blessures dans le Temps
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_dossier_medical_index') }}">Dossiers Médicaux</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Statistiques</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <!-- Graphique Évolution des Blessures -->
            <div class="row mt-4">
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Nombre de Blessures par Mois</h5>
                            <canvas id="blessuresOverTimeChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Graphique Évolution des Blessures
    const ctx = document.getElementById('blessuresOverTimeChart').getContext('2d');
    const blessuresOverTimeChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ labels|json_encode|raw }}, // Labels : périodes (YYYY-MM)
            datasets: [{
                label: 'Nombre de Blessures',
                data: {{ data|json_encode|raw }}, // Données : nombre de blessures
                borderColor: '#0d6efd', // Couleur de la ligne
                backgroundColor: 'rgba(13, 110, 253, 0.2)', // Couleur de remplissage
                borderWidth: 2,
                fill: true
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                },
                tooltip: {
                    mode: 'index',
                    intersect: false
                }
            },
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Période (Mois)'
                    }
                },
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Nombre de Blessures'
                    }
                }
            }
        }
    });
</script>
{% endblock %}