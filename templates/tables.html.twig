<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Tournois Management{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"/>
    <!-- Custom CSS -->
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }
        
        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }
        
        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }
        
        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
        }
    </style>
    {% endblock %}
</head>
<body>
    <div class="wrapper">
        {% block sidebar %}
        <!-- Sidebar -->
        <nav class="sidebar bg-white">
            <div class="sidebar-header p-4">
                <h3 class="fw-bold text-primary">Tournois Manager</h3>
            </div>
            <div class="sidebar-menu p-3">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_tournois_index') }}" class="nav-link active bg-light rounded">
                            <i class="fas fa-home me-3"></i> Tournois
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_tournois_calendar') }}" class="nav-link">
                            <i class="fas fa-calendar-alt me-3"></i> Events
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_performanceequipe_index')}}" class="nav-link">
                            <i class="fas fa-users me-3"></i> Performanceequipe
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_performanceequipe_chart')}}" class="nav-link">
                            <i class="fas fa-cog me-3"></i> performance charts
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        {% endblock %}

        <div class="main-content">
            {% block header %}
            <!-- Header -->
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="d-flex align-items-center ms-auto">
                        <div class="dropdown">
                            <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-xl"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            {% endblock %}

            {% block content %}
            <!-- Main Content -->
            <div class="container-fluid">
                <div class="row mb-4">
                    <div class="col">
                        <h2 class="fw-bold">Tournois List</h2>
                        <div class="mb-4">
    <input type="text" id="searchTournois" class="form-control" placeholder="Search Tournois...">
</div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_tournois_index') }}">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Tournois</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-auto">
                        <a href="{{ path('app_tournois_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i> Add New
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover" id="tournoisTable" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Sport</th>
                                    <th>Date DÃ©but</th>
                                    <th>Date Fin</th>
                                    <th>Adresse</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for tournoi in tournois %}
                                <tr>
                                    <td>{{ tournoi.nom }}</td>
                                    <td>{{ tournoi.sport }}</td>
                                    <td>{{ tournoi.dateDebut|date('Y-m-d H:i') }}</td>
                                    <td>{{ tournoi.dateFin|date('Y-m-d H:i') }}</td>
                                    <td>{{ tournoi.adresse }}</td>
                                    <td>
                                        <a href="{{ path('app_tournois_edit', {'id': tournoi.id}) }}" class="btn btn-sm btn-icon btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                <a href="{{ path('app_tournois_show', {'id': tournoi.id}) }}" class="btn btn-sm btn-icon btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form action="{{ path('app_tournois_delete', {'id': tournoi.id}) }}" 
          method="post" style="display:inline;" 
          onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.id) }}">
        <button type="submit" class="btn btn-sm btn-icon btn-danger">
            <i class="fas fa-trash"></i>
        </button>
    </form>

                                        
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">No records found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-center">
    {{ knp_pagination_render(tournois) }}
</div>
                    </div>
                </div>
            </div>
            {% endblock %}
        </div>
    </div>

    {% block javascripts %}
    <!-- Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables -->
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.js"></script>
    <!-- Custom Script -->
    <script>
    $(document).ready(function () {
        function loadTournois(search = '', page = 1) {
            $.ajax({
                url: '{{ path("app_tournois_search") }}',
                method: 'GET',
                data: { search: search, page: page },
                success: function (response) {
                    // Update table rows
                    let rows = '';
                    response.data.forEach(function (tournoi) {
                        rows += `
                            <tr>
                                <td>${tournoi.nom}</td>
                                <td>${tournoi.sport}</td>
                                <td>${tournoi.dateDebut}</td>
                                <td>${tournoi.dateFin}</td>
                                <td>${tournoi.adresse}</td>
                                <td>
                                    <a href="{{ path('app_tournois_edit', {'id': '__ID__'}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_tournois_show', {'id': '__ID__'}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form action="{{ path('app_tournois_delete', {'id': '__ID__'}) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ '__ID__') }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        `.replace(/__ID__/g, tournoi.id);
                    });
                    $('#tournoisTable tbody').html(rows);

                    // Update pagination controls
                    let paginationControls = '';
                    for (let i = 1; i <= response.pagination.totalPages; i++) {
                        paginationControls += `
                            <li class="page-item ${i === response.pagination.currentPage ? 'active' : ''}">
                                <a class="page-link" href="#" data-page="${i}">${i}</a>
                            </li>
                        `;
                    }
                    $('.pagination').html(paginationControls);
                },
                error: function () {
                    alert('Failed to load data. Please try again.');
                }
            });
        }

        // Initial load
        loadTournois();

        // Search functionality
        $('#searchTournois').on('input', function () {
            const search = $(this).val();
            loadTournois(search);
        });

        // Handle pagination click
        $(document).on('click', '.pagination a', function (e) {
            e.preventDefault();
            const page = $(this).data('page');
            const search = $('#searchTournois').val();
            loadTournois(search, page);
        });
    });
</script>
    {% endblock %}
</body>
</html>