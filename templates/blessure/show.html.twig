{% extends 'base.html.twig' %}

{% block title %}Détails de la Blessure{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }

        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }

        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }

        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }

        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
        }

        .btn-primary {
            transition: transform 0.2s ease-in-out;
        }

        .btn-primary:hover {
            transform: scale(1.05);
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar bg-white">
        <div class="sidebar-header p-4">
            <h3 class="fw-bold text-primary">Medical Manager</h3>
        </div>
        <div class="sidebar-menu p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="{{ path('app_dossier_medical_index') }}" class="nav-link">
                        <i class="fas fa-notes-medical me-3"></i> Dossiers Médicaux
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_blessure_index') }}" class="nav-link active bg-light rounded">
                        <i class="fas fa-user-injured me-3"></i> Gestion des Blessures
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog me-3"></i> Settings
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fa-xl"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="fw-bold">
                        <i class="fas fa-user-injured me-2"></i>Détails de la Blessure
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_blessure_index') }}">Gestion des Blessures</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Détails</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row"><i class="fas fa-hashtag me-2 text-muted"></i>Athlète</th>
                                <td>{{ blessure.athlete.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-calendar-day me-2 text-muted"></i>Date de Blessure</th>
                                <td>{{ blessure.dateBlessure ? blessure.dateBlessure|date('d/m/Y H:i') : '-' }}</td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-calendar-check me-2 text-muted"></i>Date de Retour</th>
                                <td>
                                    {% if blessure.dateRetour %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>{{ blessure.dateRetour|date('d/m/Y H:i') }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-hourglass-half me-1"></i>En cours
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-file-alt me-2 text-muted"></i>Description</th>
                                <td>{{ blessure.description }}</td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-tag me-2 text-muted"></i>Type</th>
                                <td>
                                    <span class="badge 
                                        {% if blessure.type == 'Légère' %}bg-info text-dark
                                        {% elseif blessure.type == 'Grave' %}bg-danger
                                        {% else %}bg-secondary{% endif %}">
                                        {% if blessure.type == 'Légère' %}
                                            <i class="fas fa-exclamation-circle me-1"></i>
                                        {% elseif blessure.type == 'Grave' %}
                                            <i class="fas fa-skull-crossbones me-1"></i>
                                        {% else %}
                                            <i class="fas fa-question-circle me-1"></i>
                                        {% endif %}
                                        {{ blessure.type }}
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex gap-2 mt-4">
                        <a href="{{ path('app_blessure_edit', {'id': blessure.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        <a href="{{ path('app_blessure_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <a href="{{ path('blessure_notify') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>mail
                        </a>
                    </div>

                    <!-- Delete Form -->
                    <div class="mt-4">
                        {{ include('blessure/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });
        });
    </script>
{% endblock %}