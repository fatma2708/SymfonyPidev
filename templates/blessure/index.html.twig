{% extends 'base.html.twig' %}

{% block title %}Gestion des Blessures{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"/>
    <!-- Custom CSS -->
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }

        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }

        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }

        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }

        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
        }

        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
        }

        .btn-sm {
            border-radius: 50px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar bg-white">
        <div class="sidebar-header p-4">
            <h3 class="fw-bold text-primary">Medical Manager</h3>
        </div>
        <div class="sidebar-menu p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="{{ path('app_dossier_medical_index') }}" class="nav-link">
                        <i class="fas fa-notes-medical me-3"></i> Dossiers Médicaux
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_blessure_index') }}" class="nav-link active bg-light rounded">
                        <i class="fas fa-user-injured me-3"></i> Gestion des Blessures
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_statistiques') }}" class="nav-link">
                        <i class="fas fa-cog me-3"></i> Statistique Des Blessures
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_blessure_index_front') }}" class="nav-link">
                        <i class="fas fa-cog me-3"></i> Consulter
                    </a>
                </li>
                
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fa-xl"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="fw-bold">
                        <i class="fas fa-user-injured me-2"></i>Gestion des Blessures
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_dossier_medical_index') }}">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blessures</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_blessure_new') }}" class="btn btn-primary shadow-sm">
                        <i class="fas fa-plus me-2"></i>Nouvelle Blessure
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover" id="blessureTable" style="width:100%">
                        <thead class="table-light">
                            <tr>
                                <th>Nom Athlète</th>
                                <th>Date Blessure</th>
                                <th>Date Retour</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for blessure in blessures %}
                            <tr>
                                <td class="fw-bold">{{ blessure.athlete.name }}</td>
                                <td>{{ blessure.dateBlessure ? blessure.dateBlessure|date('d/m/Y') : '-' }}</td>
                                <td>
                                    {% if blessure.dateRetour %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>{{ blessure.dateRetour|date('d/m/Y H:i') }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-hourglass-half me-1"></i>En cours
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-truncate" style="max-width: 200px;" title="{{ blessure.description }}">
                                    {{ blessure.description }}
                                </td>
                                <td>
                                    <span class="badge 
                                        {% if blessure.type == 'Légère' %}bg-info text-dark
                                        {% elseif blessure.type == 'Grave' %}bg-danger
                                        {% else %}bg-secondary{% endif %}">
                                        {% if blessure.type == 'Légère' %}
                                            <i class="fas fa-exclamation-circle me-1"></i>
                                        {% elseif blessure.type == 'Grave' %}
                                            <i class="fas fa-skull-crossbones me-1"></i>
                                        {% else %}
                                            <i class="fas fa-question-circle me-1"></i>
                                        {% endif %}
                                        {{ blessure.type }}
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_blessure_show', {'id': blessure.id}) }}" 
                                           class="btn btn-sm btn-light border me-1 rounded-circle shadow-sm" 
                                           data-bs-toggle="tooltip" 
                                           title="Voir détails">
                                            <i class="fas fa-eye text-primary"></i>
                                        </a>
                                        <a href="{{ path('app_blessure_edit', {'id': blessure.id}) }}" 
                                           class="btn btn-sm btn-light border rounded-circle shadow-sm" 
                                           data-bs-toggle="tooltip" 
                                           title="Modifier">
                                            <i class="fas fa-edit text-secondary"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="fas fa-folder-open text-muted fa-3x mb-2"></i>
                                        <h5 class="text-muted">Aucune blessure enregistrée</h5>
                                        <p class="text-muted">Cliquez sur le bouton "Nouvelle Blessure" pour commencer</p>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });

            // Initialize DataTable
            $('#blessureTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: 5 } // Disable sorting for the "Actions" column
                ]
            });

            // Tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
        });
    </script>
{% endblock %}