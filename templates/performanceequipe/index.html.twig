{% extends 'tables2.html.twig' %}

{% block title %}Team Performance{% endblock %}

{% block stylesheets %}

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"/>
    <!-- Custom CSS -->
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }
        
        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }
        
        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }
        
        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
        }
    </style>
    {% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar bg-white">
        <div class="sidebar-header p-4">
            <h3 class="fw-bold text-primary">Sports Manager</h3>
        </div>
        <div class="sidebar-menu p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="{{ path('app_tournois_index') }}" class="nav-link">
                        <i class="fas fa-home me-3"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_tournois_calendar') }}" class="nav-link">
                        <i class="fas fa-calendar-alt me-3"></i> Events
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_performanceequipe_index')}}" class="nav-link active bg-light rounded">
                        <i class="fas fa-users me-3"></i> Teams
                    </a>
                </li>
                <li class="nav-item mb-2">
                        <a href="{{ path('app_performanceequipe_chart')}}" class="nav-link">
                        <i class="fas fa-cog me-3"></i> Settings
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fa-xl"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="fw-bold">Team Performance</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_tournois_index') }}">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Performance</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_performanceequipe_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i> Create New
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <table class="table table-hover" id="performanceTable" style="width:100%">
                        <thead class="table-light">
                            <tr>
                                <th>Team Name</th>
                                <th>Tournament</th>
                                <th>Wins</th>
                                <th>Losses</th>
                                <th>Rank</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for performanceequipe in performanceequipes %}
                            <tr>
                                <td>{{ performanceequipe.equipe.nom }}</td>
                                <td>{{ performanceequipe.tournois.nom }}</td>
                                <td>{{ performanceequipe.victoires }}</td>
                                <td>{{ performanceequipe.pertes }}</td>
                                <td>{{ performanceequipe.rang }}</td>
                                <td>
                                    <a href="{{ path('app_performanceequipe_show', {'id': performanceequipe.id}) }}" 
                                       class="btn btn-sm btn-icon btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_performanceequipe_edit', {'id': performanceequipe.id}) }}" 
                                       class="btn btn-sm btn-icon btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">No records found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });

            // Initialize DataTable
            $('#performanceTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: 5 }
                ]
            });
        });
    </script>
{% endblock %}