{% extends 'base.html.twig' %}

{% block title %}Create Performanceequipe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Consolidated CSS imports -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"/>
    
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            width: 280px;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            z-index: 1000;
        }
        
        .main-content {
            margin-left: 280px;
            padding: 2rem;
            transition: all 0.3s;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
                &.active {
                    margin-left: 0;
                }
            }
            .main-content {
                margin-left: 0;
                padding: 1rem;
            }
        }
        
        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }
        
        .form-control {
            border-radius: 0.375rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">

  {% block sidebar %}
        <!-- Sidebar -->
        <nav class="sidebar bg-white">
            <div class="sidebar-header p-4">
                <h3 class="fw-bold text-primary">Tournois Manager</h3>
            </div>
            <div class="sidebar-menu p-3">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_tournois_index') }}" class="nav-link active bg-light rounded">
                            <i class="fas fa-home me-3"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_tournois_calendar') }}" class="nav-link">
                            <i class="fas fa-calendar-alt me-3"></i> Events
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_performanceequipe_index')}}" class="nav-link">
                            <i class="fas fa-users me-3"></i> Teams
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_performanceequipe_chart')}}" class="nav-link">
                            <i class="fas fa-cog me-3"></i> Settings
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        {% endblock %}
    <section class="panel">
        <header class="panel-heading p-4">
            <h2 class="panel-title mb-0"><i class="fas fa-chart-line me-2"></i>Create Performanceequipe</h2>
        </header>
        
        <div class="panel-body p-4">
            <div class="card">
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'novalidate':'novalidate','class': 'form-horizontal'}}) }}

                    <!-- Victoires Field -->
                    <div class="row mb-4">
                        <label class="col-md-3 col-form-label">{{ form_label(form.victoires) }}</label>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-trophy"></i></span>
                                {{ form_widget(form.victoires, {'attr': {'class': 'form-control', 'placeholder': 'Number of Wins'}}) }}
                            </div>
                            <small class="text-danger">{{ form_errors(form.victoires) }}</small>
                        </div>
                    </div>

                    <!-- Pertes Field -->
                    <div class="row mb-4">
                        <label class="col-md-3 col-form-label">{{ form_label(form.pertes) }}</label>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-times-circle"></i></span>
                                {{ form_widget(form.pertes, {'attr': {'class': 'form-control', 'placeholder': 'Number of Losses'}}) }}
                            </div>
                            <small class="text-danger">{{ form_errors(form.pertes) }}</small>
                        </div>
                    </div>

                    <!-- Rang Field -->
                    <div class="row mb-4">
                        <label class="col-md-3 col-form-label">{{ form_label(form.rang) }}</label>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-medal"></i></span>
                                {{ form_widget(form.rang, {'attr': {'class': 'form-control', 'placeholder': 'Team Rank'}}) }}
                            </div>
                            <small class="text-danger">{{ form_errors(form.rang) }}</small>
                        </div>
                    </div>

                    <!-- Equipe Field -->
                    <div class="row mb-4">
                        <label class="col-md-3 col-form-label">{{ form_label(form.equipe) }}</label>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>
                                {{ form_widget(form.equipe, {'attr': {'class': 'form-control', 'placeholder':'Equipe'}})}}
                            </div>
                            <small class="text-danger">{{ form_errors(form.equipe) }}</small>
                        </div>
                    </div>

                    <!-- Tournois Field -->
                    <div class="row mb-4">
                        <label class="col-md-3 col-form-label">{{ form_label(form.tournois) }}</label>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-trophy"></i></span>
                                {{ form_widget(form.tournois, {'attr': {'class': 'form-control','placeholder':'Tournois'}})}}
                            </div>
                            <small class="text-danger">{{ form_errors(form.tournois) }}</small>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="row mt-5">
                        <div class="col-md-6 offset-md-3">
                            <button class="btn btn-primary me-3">
                                <i class="fas fa-save me-2"></i>Save
                            </button>
                            <a href="{{ path('app_performanceequipe_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to list
                            </a>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}