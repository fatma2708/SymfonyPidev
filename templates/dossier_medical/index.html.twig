{% extends 'base.html.twig' %}

{% block title %}Liste des Dossiers Médicaux{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"/>
    <!-- Custom CSS -->
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }

        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }

        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }

        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }

        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
        }

        .btn-sm {
            border-radius: 50px;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.1);
        }

        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar bg-white">
        <div class="sidebar-header p-4">
            <h3 class="fw-bold text-primary">Medical Manager</h3>
        </div>
        <div class="sidebar-menu p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="{{ path('app_dossier_medical_index') }}" class="nav-link active bg-light rounded">
                        <i class="fas fa-notes-medical me-3"></i> Dossiers Médicaux
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_blessure_index') }}" class="nav-link">
                        <i class="fas fa-user-injured me-3"></i> Gestion des Blessures
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog me-3"></i> Settings
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fa-xl"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="fw-bold">Liste des Dossiers Médicaux</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_blessure_index') }}">Gestion des Blessures</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Dossiers Médicaux</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_dossier_medical_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i> Nouveau Dossier Médical
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <table class="table table-hover" id="medicalTable" style="width:100%">
                        <thead class="table-light">
                            <tr>
                                <th>Athlète</th>
                                <th>Allergies</th>
                                <th>Dernier Check-up</th>
                                <th>Description</th>
                                <th>État</th>
                                <th>Vaccinations</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dossier_medical in dossier_medicals %}
                            <tr>
                                <td>{{ dossier_medical.athlete.name }}</td>
                                <td>{{ dossier_medical.allergies }}</td>
                                <td>{{ dossier_medical.dernierCheckup ? dossier_medical.dernierCheckup|date('d/m/Y') : '-' }}</td>
                                <td class="text-truncate" style="max-width: 200px;" title="{{ dossier_medical.description }}">
                                    {{ dossier_medical.description }}
                                </td>
                                <td>
                                    <span class="badge 
                                        {% if dossier_medical.etatAthlete == 'Sain' %}bg-success
                                        {% elseif dossier_medical.etatAthlete == 'Blessé' %}bg-danger
                                        {% else %}bg-secondary{% endif %}">
                                        {{ dossier_medical.etatAthlete }}
                                    </span>
                                </td>
                                <td>{{ dossier_medical.vaccinations }}</td>
                                <td>
                                    <a href="{{ path('app_dossier_medical_show', {'id': dossier_medical.id}) }}" 
                                       class="btn btn-sm btn-icon btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_dossier_medical_edit', {'id': dossier_medical.id}) }}" 
                                       class="btn btn-sm btn-icon btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">Aucun dossier médical trouvé</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });

            // Initialize DataTable
            $('#medicalTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: 6 } // Disable sorting for the "Actions" column
                ]
            });
        });
    </script>
{% endblock %}