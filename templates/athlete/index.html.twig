{% extends 'base.html.twig' %}

{% block title %}Liste des Athlètes{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Liste des Athlètes</h1>

        <div class="mb-3">
            <a href="{{ path('app_athlete_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer un nouvel athlète
            </a>
        </div>

        {% if athletes|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for athlete in athletes %}
                        <tr>
                            <td>{{ athlete.id }}</td>
                            <td>{{ athlete.name }}</td>
                            <td>{{ athlete.mail }}</td>
                            <td>
                                <a href="{{ path('app_', {'id': athlete.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_athlete_edit', {'id': athlete.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun athlète trouvé.
            </div>
        {% endif %}
    </div>
{% endblock %}