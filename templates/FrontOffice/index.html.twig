{% extends 'base.html.twig' %}

{% block title %}Gestion des Blessures{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <style>
    
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            transition: all 0.3s;
            z-index: 1000;
            background: #ffffff;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
        }
        .main-content {
            margin-left: 280px;
            padding: 20px;
            transition: all 0.3s;
        }
        @media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }
            .main-content {
                margin-left: 0;
            }
            .sidebar.active {
                margin-left: 0;
            }
        }
        .navbar {
            padding: 15px 20px;
            background: #fff !important;
            box-shadow: 0 1px 15px rgba(0,0,0,.04);
        }
        .card {
            border: none;
            box-shadow: 0 0 35px 0 rgba(49,57,66,.1);
            border-radius: 12px;
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
        }
        .btn-sm {
            border-radius: 50px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar bg-white">
        <div class="sidebar-header p-4">
            <h3 class="fw-bold text-primary">GYM PRO</h3>
        </div>
        <div class="sidebar-menu p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="{{ path('app_dossier_index_front') }}" class="nav-link active bg-light rounded">
                        <i class="fas fa-user-injured me-3"></i> Dossiers Médicaux
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="{{ path('app_blessure_index') }}" class="nav-link active bg-light rounded">
                        <i class="fas fa-user-injured me-3"></i> Admin
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="btn btn-link d-lg-none" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="btn btn-link" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle fa-xl"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="fw-bold">
                        <i class="fas fa-user-injured me-2"></i>Blessures
                    </h2>
                </div>
            </div>

            <!-- Cards List -->
            {% if pagination.items|length > 0 %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for blessure in pagination %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">{{ blessure.athlete.name }}</h5>
                            <p class="card-text">
                                <strong>Date Blessure :</strong> {{ blessure.dateBlessure ? blessure.dateBlessure|date('d/m/Y') : '-' }}<br>
                                <strong>Date Retour :</strong>
                                {% if blessure.dateRetour %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>{{ blessure.dateRetour|date('d/m/Y H:i') }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-hourglass-half me-1"></i>En cours
                                    </span>
                                {% endif %}<br>
                                <strong>Description :</strong> {{ blessure.description }}<br>
                                <strong>Type :</strong>
                                <span class="badge 
                                    {% if blessure.type == 'Légère' %}bg-info text-dark
                                    {% elseif blessure.type == 'Grave' %}bg-danger
                                    {% else %}bg-secondary{% endif %}">
                                    {% if blessure.type == 'Légère' %}
                                        <i class="fas fa-exclamation-circle me-1"></i>
                                    {% elseif blessure.type == 'Grave' %}
                                        <i class="fas fa-skull-crossbones me-1"></i>
                                    {% else %}
                                        <i class="fas fa-question-circle me-1"></i>
                                    {% endif %}
                                    {{ blessure.type }}
                                </span>
                            </p>
                        </div>
                        <div class="card-footer text-end">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_blessure_show', {'id': blessure.id}) }}" 
                                   class="btn btn-sm btn-light border me-1 rounded-circle shadow-sm" 
                                   data-bs-toggle="tooltip" 
                                   title="Voir détails">
                                    <i class="fas fa-eye text-primary"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Pagination Controls -->
            <div class="row mt-4">
                <div class="col">
                    <nav aria-label="Pagination">
                        {{ knp_pagination_render(pagination) }}
                    </nav>
                </div>
            </div>
            {% else %}
            <div class="row">
                <div class="col text-center py-4">
                    <div class="d-flex flex-column align-items-center">
                        <i class="fas fa-folder-open text-muted fa-3x mb-2"></i>
                        <h5 class="text-muted">Aucune blessure enregistrée</h5>
                        <p class="text-muted">Cliquez sur le bouton "Nouvelle Blessure" pour commencer</p>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });

            // Tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
        });
    </script>
{% endblock %}